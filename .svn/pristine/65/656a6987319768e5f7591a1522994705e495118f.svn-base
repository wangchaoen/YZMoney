#pragma mark - creatView
- (void)createHeadIndexView {
    UIView *headView = [self.svHeader superview];
    CGFloat width = 50;
    CGFloat height = 60;
    CGFloat interval = (S_W - 50 * 4) / 5;
    [YZHttpApiManager apiIndexColumnWithParameters:nil completionHandler:^(id response, NSError *error) {
        NSLog(@"%@", response);
        NSMutableArray *array = [response[@"data"] mutableCopy];
        [array addObject:@{@"name": @"海外投资", @"code": @"overseas_image"}];
        [array addObject:@{@"name": @"公告", @"code": @"announcement_image"}];
        for (int i = 0; i < array.count; i++) {
            NSDictionary *dic = array[i];
            UIButton *but = [UIButton buttonWithType:UIButtonTypeCustom];
            but.frame = CGRectMake(interval + (interval + width) * (i % 4), 11 + 187 + i / 4 * (11 + height), width, height);
            but.titleEdgeInsets = UIEdgeInsetsMake(50, -46, 0, 0);
            but.imageEdgeInsets = UIEdgeInsetsMake(0, 2, 15, 0);
            but.titleLabel.font = MinFont;
            but.tag = i + 1;
            [but setTitle:dic[@"name"] forState:UIControlStateNormal];
            [but setTitleColor:[UIColor blackColor] forState:UIControlStateNormal];
            [but setImage:[UIImage imageNamed:dic[@"code"]] forState:UIControlStateNormal];
            [but addTarget:self action:@selector(actionEntry:) forControlEvents:UIControlEventTouchUpInside];
            [headView addSubview:but];
        }

    } finished:^{
        
    }];
}
